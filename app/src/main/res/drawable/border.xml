<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pressed_background_color" />
            <stroke android:width="2dp" android:color="@color/pressed_border_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/default_background_color" />
            <stroke android:width="2dp" android:color="@color/default_border_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
